{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@wvs-play-win-workspace/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@wvs-play-win-workspace/shared/ui-kit": [
        "libs/shared/ui-kit/src/index.ts"
      ],
      "@wvs-play-win-workspace/shared/types": [
        "libs/shared/types/src/index.ts"
      ],
      "@wvs-play-win-workspace/shared/shared-util": [
        "libs/shared/shared-util/src/index.ts"
      ],
      "@wvs-play-win-workspace/backend": ["libs/backend/src/index.ts"],
      "@wvs-play-win-workspace/data-access-layer": [
        "libs/data-access-layer/src/index.ts"
      ],
      "@wvs-play-win-workspace/data-access-store": [
        "libs/data-access-store/src/index.ts"
      ],
      "@wvs-play-win-workspace/feature/player-master": [
        "libs/feature/player-master/src/index.ts"
      ],
      "@wvs-play-win-workspace/feature/tournament-master": [
        "libs/feature/tournament-master/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "angularCompilerOptions": {
    "enableIvy": true
  }
}
